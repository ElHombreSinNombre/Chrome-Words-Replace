{
    "name": "Relaxing cup of café con leche",
    "version": "0.5",
    "icons": {
        "16": "resources/img/flag.png",
        "48": "resources/img/flag.png",
        "128": "resources/img/flag.png"
    },
    "manifest_version": 2,
    "permissions": [
        "tabs",
        "<all_urls>"
    ],
    "browser_action": {
        "default_icon": "resources/img/flag.png",
        "default_title": "Relaxing cup of café con leche",
        "default_popup": "index.html"
    },
    "content_scripts": [{
        "matches": [
            "<all_urls>"
        ],
        "js": ["js/scripts.js"]
    }]
}